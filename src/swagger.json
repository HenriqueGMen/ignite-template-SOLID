{
  "openapi": "3.0.0",
  "info": {
    "tittle": "RegisUser Documentation",
    "description": "API to register users",
    "version": "1.0.0",
    "contact": {
      "email": "henriquemen.dev@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string" 
                  }
                },
                "example": {
                  "name": "user",
                  "email": "user@mail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "b5e632c0-4657-47a4-82f5-8b314d2eba21",
                    "name": "Rocketseat",
                    "email": "oi@rocketseat.com.br",
                    "created_at": "2022-08-01T23:12:10.959Z",
                    "updated_at": "2022-08-01T23:12:10.959Z"
                  }
                }
              }
            } 
          },
          "400": {
            "description": "Cannot create user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties":{
                    "error": "string"
                  },
                  "example": "User already exists!"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "List all users",
        "description": "List all users only when user is admin",
        "parameters": [
          { "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "admin": true,
                        "id": "d6c739c0-4576-47a4-82f5-8b314d2eba21",
                        "name": "Rocketseat",
                        "email": "oi@rocketseat.com.br",
                        "created_at": "2021-03-21T20:32:40.759Z",
                        "updated_at": "2021-03-21T20:32:40.759Z"
                      },
                      {
                        "admin": false,
                        "id": "b47e9e4e-ad46-8b64-7a93-4f0158c9e348",
                        "name": "Vinícius Fraga",
                        "email": "vinicius.fraga@rocketseat.com.br",
                        "created_at": "2021-03-10T23:14:43.081Z",
                        "updated_at": "2021-03-10T23:14:43.081Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "Only admins can access the list."
                  }
                }
              }
            }
          }  
        }  
      }
    }
  }
}